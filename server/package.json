    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "nodemailer": "^7.0.10",
    "prisma": "^6.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/nodemailer": "^7.0.3",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3"
  }
